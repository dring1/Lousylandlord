<div class="light-font ctr half">

	<h1 class="center">Submit a Landlord!</h1>


	<%= render '/shared/error_messages' %>

	<%= bootstrap_form_for @landlord do |f| %>

	<div >
			<%= f.text_field :name  %>
			<%= f.collection_select :province_id, Province.order(:name), :id, :name, include_blank: true %>		
			<%= f.grouped_collection_select :city_id, Province.order(:name), :cities, :name,  :id, :name, include_blank: true %>	
	</div>


	<div class="center submit">
		<%= f.submit "Submit", class: " btn btn-large btn-primary" %>
	</div>
	<% end %>


</div>