<h1>Landlord Results</h1>
<div class="center" > 
	<input type="text" class="search-query" placeholder="Filter name ... ">
  <br/><br/>

  <%= link_to "View map", root_url %> <!-- Will link to full page map if search was made by city -->
</div>
<br>
<table class='table table-hover'>
<th>Landlord's Name</th>
<th>User Comment</th>
<th>See profile</th>
<% if signed_in? %>
  <th>Delete</th>
<% end %>
  <% @landlords.each do |l| %>
    <tr >     
      <td class='user-list'>
      	<%= content_tag(:p, l.name,  :data => {:name => l.name }) %> 
      </td>
      <td>
      	<%= l.comments.count %>
      </td>      
      <td>
      	<%= link_to 'Profile', l %>
      </td>
      <% if signed_in? %>
        <td><%= link_to 'Delete', l, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: l.name %>
        </td>
      <% end %>
    </tr>
  <% end %>

</table>

<%= will_paginate %>

<%= link_to 'Submit a Landlord', submit_path %> 